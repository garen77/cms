# ========================================
# TEMPLATE VARIABILI D'AMBIENTE
# ========================================
# Copia questo file in .env e modifica i valori

# ========================================
# SPRING PROFILES
# ========================================
# Valori possibili: dev, prod
SPRING_PROFILES_ACTIVE=dev

# ========================================
# DATABASE POSTGRESQL
# ========================================
DB_URL=jdbc:postgresql://localhost:5432/cms_db
DB_USERNAME=postgres
DB_PASSWORD=your_password_here

# Hibernate DDL Auto
# dev: update (crea/modifica tabelle automaticamente)
# prod: validate (verifica solo schema, non modifica)
DB_DDL_AUTO=update

# Mostra SQL nei log (true per dev, false per prod)
DB_SHOW_SQL=true

# ========================================
# MEDIA UPLOAD
# ========================================
# Directory dove salvare le immagini dei content
# Dev: percorso relativo (./uploads)
# Prod: percorso assoluto (/var/cms/uploads)
MEDIA_UPLOAD_DIR=./uploads

# URL base per servire le immagini
# Dev: http://localhost:8080/api/media
# Prod: https://your-domain.com/api/media
MEDIA_BASE_URL=http://localhost:8080/api/media

# ========================================
# AVATAR UPLOAD
# ========================================
# Directory dove salvare gli avatar utenti
AVATAR_UPLOAD_DIR=./avatars

# URL base per servire gli avatar
AVATAR_BASE_URL=http://localhost:8080/api/users/avatars

# ========================================
# JWT CONFIGURATION
# ========================================
# Secret per firmare i JWT token
# IMPORTANTE: Genera un nuovo secret per produzione!
# Comando per generare: node -e "console.log(require('crypto').randomBytes(64).toString('base64'))"
JWT_SECRET=z7bmKAzWOtOjelu0OTsmPoF9zO+S4Lj/CulHkSppQbmdgfo5zmAa6LYLbYJMCdU4EJbkM67CAvykKuPTP7EpHQ==

# Durata token in millisecondi
# 86400000 = 24 ore
# 3600000 = 1 ora
# 604800000 = 7 giorni
JWT_EXPIRATION=86400000

# ========================================
# SERVER
# ========================================
SERVER_PORT=8080
